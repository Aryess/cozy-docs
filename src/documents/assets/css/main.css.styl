@import 'nib'

blue = #34a6ff
lightblue = #cbe4fb
greyblue = #34a6bb
green = #5c5
orange = #fe8800
lightorange = #ffc47f
darkgrey = #333
lightgrey = #ccc
grey = #aaa
red = #dd3333


@font-face
  font-family main-light
  src url("../fonts/maven-pro-light-200.otf")

@font-face
  font-family main
  src url("../fonts/maven-pro-light-300.otf")

@font-face
  font-family cool
  src url("../fonts/signika-regular.ttf")

body
  font-family main

.wrapper
  margin auto
  width 75%

// Header styles
header
  font-family main-light
  border-bottom 5px solid lightorange
  padding 20px 20px 5px 20px

  h1
    font-size 30px
    padding 0 !important
    margin-left 15px
    .title
      font-size 60px
      position relative


    .menu-button
      font-size 30px
      padding 10px
      border 1px solid blue
      border-radius 10px
      text-decoration none
      user-select none
      color #000


      &:hover
        color white
        background orange
        border-color orange
      &:active
        box-shadow inset 0 0 15px lightorange
      &.selected
        color white
        background blue
        &:hover
          border-color blue
        &:active
          box-shadow none

  .subtitle
    display block
    margin-top 5px
    font-family cool
    font-size 15px
    font-weight bold


// Menu styles

aside
  border-right: 1px solid lightblue
  margin-top 20px

#navigation
  margin 0 20px 20px 20px
  ul
    list-style-type none
    padding 0
    font-family cool

    li
      border-bottom 1px solid lightblue
      line-height 30px
      cursor pointer

      a, a:active
        color blue
      &.selected a
        color #fff

      .label
        width: 100%
        padding 10px 0
        display: inline-block
        user-select none
        text-decoration none

        &:hover
          background orange
          color #fff

        &:active
          box-shadow inset 0 0 15px lightorange

      &:last-of-type
        border-bottom 0

      &.selected
        background blue
        padding-bottom 0

    &.first-level li
      .label
        font-family cool
        padding-left 10px
      &.selected > ul
        border-top 1px solid lightblue

    &.second-level
      li
        color #fff
        border-bottom 0
        text-align center
        line-height 20px

        .label
          padding 7px 0

        &:hover
          background orange

#social
  margin 0 20px 20px 20px

  ul
    list-style-type none
    margin 0
    padding 0

    li a
      color blue

// Content styles
#main

  .breadcrumb
    padding 8px 15px
    background lightblue
    color #666
    border-radius 5px
    list-style-type none

    li
      &:not(.selected):after
        content " /"
      &.selected
        color greyblue
  p
    font-size 20px

// Footer styles
#footer
  background orange
  color white
  text-align center

  ul
    list-style-type none
    padding 0
    display inline-block

