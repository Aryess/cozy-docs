@import 'nib'

blue = #34a6ff
lightblue = #cbe4fb
greyblue = #34a6bb
green = #5c5
orange = #fe8800
lightorange = #ffc47f
darkgrey = #333
lightgrey = #ccc
grey = #aaa
red = #dd3333


@font-face
    font-family main-light
    src url("../fonts/maven-pro-light-200.otf")

@font-face
    font-family main
    src url("../fonts/maven-pro-light-300.otf")

@font-face
    font-family cool
    src url("../fonts/signika-regular.ttf")

body
    font-family cool
    background-color darkgrey

.wrapper
    margin auto auto
    width 100%
    max-width 960px
    background-color white
    border-bottom-left-radius 10px
    border-bottom-right-radius 10px
    padding-top 20px

// Header styles
.navbar
    box-shadow 2px 2px 2px rgba(10, 10, 10, 0.4)

    .nav-logo
        margin-top 0
        margin-right 10px

    .subtitle
        display inline-block
        margin-right  20px
        margin-top 10px
        text-decoration none
        font-size 25px
        height 60px
        line-height 45px
        word-wrap

        .breadcrumb-item
            @media (max-width: 800px)
                display none

            &:after
                content: " > "
            a
                margin 0

        @media (max-width: 400px)
            display: none

    .submenu-container
        display inline-block
        margin-top 10px
        position relative
        text-align center
        margin-right 20px
        border 1px solid transparent

        &:hover
        &.selected
            background blue
            border 1px solid lightblue
            border-radius 5px 5px 0 0

            a
                color #fff
                border-bottom 1px solid blue
                text-decoration none


        &.selected:not(:hover)
            border-radius 5px

            a
                border-bottom none

        &:hover ul.first-level
            display block

        a
            margin 0
            padding 0 10px
            display inline-block

        ul.first-level
            display none
            z-index 5
            list-style-type none
            width 195px
            position absolute
            right 0
            margin 0
            margin-top -1px
            padding 0 0
            font-family main
            font-size 18px
            background blue
            color #fff
            border-radius 5px 0 5px 5px
            box-shadow -1px 2px 2px rgba(10, 10, 10, 0.4)

            a
                font-size 18px
                border none
                z-index 0

            li
                margin 5px 0
                padding 8px 0
                position relative
                border-left 1px solid transparent



                &:first-child
                    margin-top 0

                &:last-child
                    margin-bottom 0
                    &:hover
                        border-radius 0 0 5px 5px

                &:hover
                    background orange
                    border-left 1px solid orange

                    ul.second-level
                        display block

                ul.second-level
                    display none
                    z-index -1
                    list-style-type none
                    padding 10px 0

                    box-shadow -1px 2px 2px rgba(10, 10, 10, 0.4)
                    border-radius 5px 0 5px 5px
                    margin 0
                    top 0
                    width 220px
                    position absolute
                    right 100%
                    background orange

                    li
                        border-left 3px solid transparent
                    li:hover
                        border-left 3px solid lightorange

                    a
                        font-size 14px

                        &:hover
                            color lightblue


// Menu styles

aside
    border-right 1px solid lightblue
    position fixed
    width 250px
    margin-top -20px

    @media (max-width: 960px)
        display none

#navigation
    margin 0 0 0 20px

    ul
        list-style-type none
        padding 0
        font-family main-light


        li
            border-bottom 1px solid lightblue
            line-height 30px
            cursor pointer

            a, a:active
                color blue
            &:hover a
                color #fff

            .label
                width 100%
                padding 10px 0
                display inline-block
                user-select none
                text-decoration none

                &:hover
                    background orange
                    color #fff

            &:active
                box-shadow inset 0 0 15px lightorange

            &.active
                background blue
                .label
                    color #fff

            &:last-of-type
                border-bottom 0

            &:hover
                background blue
                padding-bottom 0

        &.first-level
            li
                .label
                    font-family cool
                    padding-left 10px

                &:hover > ul
                &.active > ul
                    border-top 1px solid lightblue

        &.second-level
            display none

        &.first-level li.active
            ul.second-level
                display block

        &.first-level li.active
        &.first-level li:hover

                li
                    color #fff
                    border-bottom 0
                    text-align center
                    line-height 20px

                    .label
                        padding 7px 0

                    &:hover
                    &.active
                        background orange

            &:hover
                color lightblue


// Content styles
#main

    &.w80
        margin auto

    &.w75
        padding-left 35px

    p
        font-weight normal
        font-size 15px
        font-family main
        margin-top 2px
        color #444

        code
            padding 5px

    ul
        margin .75em 0
        li
            font-size 15px
            font-family main
            color #444

    h3
        /* margin/padding is a trick to prevent the sticky header
        from hiding the title */
        margin-top -50px
        padding-top 35px + 50px
        margin-bottom 15px
        font-family cool
        font-weight normal

    h2
        margin-bottom 20px
        font-family cool
        font-weight normal
        font-size 30px

        margin-top -50px
        padding-top 50px + 50px

    h1
        font-family cool

    a
    a:visited
        color black

    a:hover
        color orange - 40%

    pre.highlighted
        margin-top 0
        margin-bottom 15px

        code
            padding 20px
            border-radius 10px
            line-height 20px
            margin-top 10px

// Footer styles
#footer
    color white
    text-align center
    margin-bottom 10px
    margin-top 30px
    background lightgrey + 10%
    border-bottom-left-radius 10px
    border-bottom-right-radius 10px

    ul
        list-style-type none
        padding 0
        display inline-block

    a
        font-size 18px
        text-decoration none
        font-family main
        color black

    a:hover
        color orange - 40%
